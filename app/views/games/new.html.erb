<h1>Longest Word Game</h1>

<p>Here is your grid:</p>
<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join(" ") %>

  <label for="word">Your word:</label>
  <input type="text" name="word" id="word" required autocomplete="off" />

  <input type="submit" value="Check!" />
</form>
